.tasksList
  list-style-type: none
  .tasksItem
    display: inline-block
    width: 23%;
    border: 1px solid #e8e8e8
    padding: 10px
    margin: 0 15px 10px 0
    color: rgba(0, 0, 0, 0.65)
    vertical-align: top
    box-sizing: border-box
    &.complete
      background-color: #dbffd8
    .tasksItemTitle
      width: 100%
      overflow: hidden
      text-overflow: ellipsis
      white-space: nowrap
      font-size: 16px
      font-weight: 600
      margin-bottom: 10px
      padding-bottom: 10px
      border-bottom: 1px dashed #e8e8e8
    .tasksItemDescription
      font-size: 14px
      line-height: 22px
